<p id="notice"><%= notice %></p>

<h1>Restrooms</h1>

<table>
  <thead>
    <tr>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Wheelchair</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restrooms.each do |restroom| %>
      <tr>
        <td><%= restroom.longitude %></td>
        <td><%= restroom.latitude %></td>
        <td><%= restroom.wheelchair %></td>
        <td><%= restroom.type %></td>
        <td><%= link_to 'Show', restroom %></td>
        <td><%= link_to 'Edit', edit_restroom_path(restroom) %></td>
        <td><%= link_to 'Destroy', restroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

